{
  "extends": ["next", "next/core-web-vitals"],
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "eol-last": ["error", "always"],
    "no-trailing-spaces": "error",
    "no-multi-spaces": "error",
    "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0 }],
    "spaced-comment": ["error", "always"],
    "semi": ["error", "always"],
    "max-len": [
      "error",
      {
        "code": 100,
        "ignoreUrls": true,
        "ignorePattern": "\">",
        "ignoreStrings": true
      }
    ]
  }
}
